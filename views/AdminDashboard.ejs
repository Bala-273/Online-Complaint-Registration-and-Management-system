            </ul>
        </div>
    </div>
    <div class="container complaints d-flex justify-content-center">
        <div>
            <% complaints.forEach(e=> { %>
                <form action="/admin-complaint/<%=e._id %>" method="post">
                    <div class="date">
                        <p>
                            <%= e.date %>
                            
                        </p>
                    </div>
                    <div class="card border-dark mb-3" style="max-width:
                                25rem;">
                        <div class="card-header bg-transparent
                                    border-success">
                            <h5 class="card-title">
                                <%= e.title %>
                                    <a href="
                                            <%= e.imageURL %> ">
                                        <button type="button" class="btn
                                                    btn-sm
                                                    btn-outline-warning
                                                    text-dark ms-3">View Image
                                            ðŸ‘€</button></a>
                            </h5>
                        </div>
                        <div class="card-body text-dark">
                            <p class="card-text address">
                                <%= e.address %> <a href="<%=
                                                    e.gMapURL %>"><i class="bi
                                                        bi-geo-alt"></i></a>
                            </p>
                            <div class="approval d-flex
                                                justify-content-between">
                                <div>
                                    <p style="font-weight:500;">Approval
                                        :
                                    </p>
                                </div>

                                <% if (e.approvalStatus==="Pending" ) { %>
                                    <div class="form-check
                                                        form-check-inline">
                                        <input class="form-check-input
                                                            border
                                                            border-secondary" type="radio" name="approval"
                                            id="inlineRadio1" value="Pending" checked>
                                        <label class="form-check-label" for="inlineRadio1">Pending</label>
                                    </div>
                                    <div class="form-check
                                                        form-check-inline">
                                        <input class="form-check-input
                                                            border
                                                            border-secondary" type="radio" name="approval"
                                            id="inlineRadio1" value="Yes">
                                        <label class="form-check-label" for="inlineRadio1">Yes</label>
                                    </div>
                                    <div class="form-check
                                                        form-check-inline">
                                        <input class="form-check-input
                                                            border
                                                            border-secondary" type="radio" name="approval"
                                            id="inlineRadio2" value="No">
                                        <label class="form-check-label" for="inlineRadio2">No</label>
                                    </div>
<!-- Approval -->
                                    <% } else if (e.approvalStatus==="Yes" ) { %>
                                        <div class="form-check
                                                            form-check-inline">
                                            <input class="form-check-input
                                                                border
                                                                border-secondary" type="radio"
                                                name="approval" id="inlineRadio1" value="Pending">
                                            <label class="form-check-label" for="inlineRadio1">Pending</label>
                                        </div>
                                        <div class="form-check
                                                            form-check-inline">
                                            <input class="form-check-input
                                                                border
                                                                border-secondary" type="radio"
                                                name="approval" id="inlineRadio1" value="Yes" checked>
                                            <label class="form-check-label" for="inlineRadio1">Yes</label>
                                        </div>
                                        <div class="form-check
                                                            form-check-inline">
                                            <input class="form-check-input
                                                                border
                                                                border-secondary" type="radio"
                                                name="approval" id="inlineRadio2" value="No">
                                            <label class="form-check-label" for="inlineRadio2">No</label>
                                        </div>

                                        <% } else { %>

                                            <div class="form-check
                                                                form-check-inline">
                                                <input class="form-check-input
                                                                    border
                                                                    border-secondary" type="radio"
                                                    name="approval" id="inlineRadio1" value="Pending">
                                                <label class="form-check-label" for="inlineRadio1">Pending</label>
                                            </div>
                                            <div class="form-check
                                                                form-check-inline">
                                                <input class="form-check-input
                                                                    border
                                                                    border-secondary" type="radio"
                                                    name="approval" id="inlineRadio1" value="Yes">
                                                <label class="form-check-label" for="inlineRadio1">Yes</label>
                                            </div>
                                            <div class="form-check
                                                                form-check-inline">
                                                <input class="form-check-input
                                                                    border
                                                                    border-secondary" type="radio"
                                                    name="approval" id="inlineRadio2" value="No" checked>
                                                <label class="form-check-label" for="inlineRadio2">No</label>
                                            </div>
                                            <% } %>

                            </div>
<div class="current_work_status">
    <p style="font-weight:500;">Current Work Status : <span style="font-weight:400;color: rgb(71, 70, 70);"><%= e.workStatus %></span></p>
</div>

                            <div class="workStatus
                                                                d-flex
                                                                justify-content-between">
                                <div>
                                    <p style="font-weight:500;">Set Work
                                        Status
                                        :
                                    </p>
                                </div>
                                <div>
                                    <select name="workStatus">
                                        <option>~</option>
                                          <option value="-">Unset
                                        </option>
                                        <option value="Started">Work
                                            Started
                                        </option>
                                        <option value="professional">Work
                                            Finished</option>
                                    </select>
                                </div>
