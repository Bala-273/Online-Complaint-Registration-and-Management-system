                                        href="
                                                                        https://res.cloudinary.com/dmkoxe2gk/image/upload/v1680252492/foeoknmxaq7zw8dgyt8f.jpg">
                                        <button type="button" class="btn
                                                                            btn-sm
                                                                            btn-outline-warning
                                                                            text-dark
                                                                            ms-3">ðŸ‘€</button></a></div>
                            </div>
                            <div class="appointed_officer">
    <p style="font-weight:500;">Appointed Officer : <span style="font-weight:400;color: rgb(71, 70, 70);"><%= e.officerAppointed %></span></p>
</div>
                            <div class="officerAppointed
                                                                d-flex
                                                                justify-content-start">
                                <div>
                                    <p style="font-weight:500;">Appoint Officer
                                      
                                        :
                                    </p>
                                </div>
                                <div class="ms-3">
                                    <select name="officer">
                                        <option>~</option>
                                        <option value="-">Unselect</option>
                                        <option value="Parvesh">Parvesh
                                        </option>
                                        <option value="Kaja">Kaja</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer
                                                            bg-transparent
                                                            border-success
                                                            d-flex
                                                            justify-content-between">
                            <a href=""><button type="button" class="btn
                                                                    btn-outline-dark
                                                                    btn-sm
                                                                    ">User-Profile</button>
                            </a>
                            <button type="submit" class="btn
                                                                btn-primary
                                                                btn-sm
                                                                ">Commite
                                Change</button>
                        </div>
                    </div>
                </form>
                <% }) %>

        </div>

    </div>
